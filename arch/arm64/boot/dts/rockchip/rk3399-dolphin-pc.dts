/dts-v1/;
#include "rk3399-dolphin.dtsi"

/ {
	model = "Rockchip RK3399 Board For PC (Dolphin)";
	compatible = "rockchip-dolphin-pc","rockchip,rk3399-dolphin";
};

/*
&cdn_dp {
	status = "okay";
	extcon = <&fusb0>;
};
*/

&edp {
	status = "okay";
	force-hpd;
	panel: panel {
		status = "okay";
		compatible = "simple-panel";
		prepare-delay-ms = <20>;
		enable-delay-ms = <20>;

		port {
			panel_in: endpoint {
				remote-endpoint = <&edp_out>;
			};
		};

		display-timings {
			native-mode = <&edp_timing>;

			edp_timing: edp-timing {
				clock-frequency = <200000000>;
				hactive = <1536>;
				vactive = <2048>;
				hfront-porch = <12>;
				hsync-len = <16>;
				hback-porch = <48>;
				vfront-porch = <8>;
				vsync-len = <4>;
				vback-porch = <8>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <0>;
				pixelclk-active = <0>;
			};
		};
	};
	ports {
		port@1 {
			edp_out: endpoint {
				remote-endpoint = <&panel_in>;
			};
		};
	};
};

&edp_in_vopl {
        status = "disabled";
};

&fiq_debugger {
	rockchip,baudrate = <115200>;
};
